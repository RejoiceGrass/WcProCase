/* 学生作品标题*/

/*学员作品模块*/
.works{
  background: #f0f3f8;
  padding: 90rpx 0 70rpx ;
}
.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wkMain .stuBox{
  width: 346rpx;
  height: 214rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.wkMain .stuPic{
  width: 100%;
  height: 100%;
}
.wkMain .stuPicView{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.35);
  position: absolute;
  top:0;
  left: 0;
  color: #f0f3f8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  text-align: center;
}
.wkMain .stuPicView .stuPicTran{
  opacity: 0.6;
  text-transform: uppercase;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}
.wkMain .stuPicView .line{
  width: 50rpx;
  height: 2rpx;
  background: #fff;
  margin:10rpx 0 20rpx;
}
/* 行业动态 */
.dynamic{
  padding: 90rpx 0 70rpx;
}
.dyItem{
  display: flex;
  padding: 15 0;
  border: 1rpx dashed #f4f4f4;
  justify-content: space-between;
}


.dyItem  .dyPic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .dyPic image{
  width: 100%;
  height: 100%;
}
.dyItem .dyTI{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .dyTitle{
  font-size: 34rpx;
}
.dyItem .dyInfo{
  font-size: 26rpx;
  color: #888;
}
.dyItem .dyInfo text{
  font-size: 22rpx;
}

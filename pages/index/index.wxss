/*导航栏*/
.header{
  width: 750rpx;
  height: 100rpx;
}
.hdcon{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.hdcon navigator{
  height: 50rpx;
}
.kefu{
  position: relative;
}
.logo-image{
  width: 50rpx;
  height: 50rpx;
}
.kefu-image{
  width: 50rpx;
  height: 50rpx;
}
.kefu .btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  opacity: 0;
  animation: dh linear 1s infinite;
}
/*轮播图*/
.banner{
  width: 100%;
  height: 400rpx;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 400rpx;
}

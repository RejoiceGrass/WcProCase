/* 头部组件 */
.header{
  width: 750rpx;
  height: 100rpx;
}
.hdcon{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.hdcon navigator{
  height: 50rpx;
}
.kefu{
  position: relative;
}
.logo-image{
  width: 50rpx;
  height: 50rpx;
}
.kefu-image{
  width: 50rpx;
  height: 50rpx;
}
.kefu .btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  opacity: 0;
  animation: dh linear 1s infinite;
}
/* 底部组件 */
.footer{
  padding: 30rpx 0;
  background-color: #f2f2f2f2;
  text-align: center;
}
.footer .logoPic{
  width: 180rpx;
}
.footer .logoText{
  font-size: 25rpx;
  color: #666;
}